<Window x:Class="ThingViewer.ViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThingViewer"
        mc:Ignorable="d"
        Title="ViewerWindow" Height="300" Width="300">
    <Grid>
        <Grid x:Name="Selector" Height="25" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="FileName" Width="200"></TextBox>
                <Button Content="Select" Click="SelectFile"></Button>
                
            </StackPanel>
        </Grid>
        <Grid x:Name="Viewer">
            <Grid x:Name="ImageViewer">
                <Image x:Name="ImageFrame" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stretch="UniformToFill"/>
                
            </Grid>
        </Grid>
    </Grid>
</Window>
